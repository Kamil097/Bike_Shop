@model IEnumerable<BikeShopWebPage.Models.Bike>

@{
    ViewData["Title"] = "Index";
}
<img src="~/Images/widebikepic.jpg" class="w-100" />
<div class="d-flex justify-content-center align-items-center text-center pictureFooter mb-5">
    <span>ENJOY OUR SELECTION OF BIKES</span>
</div>

<div class="text-center">
    <div class="container">
        <div class="row">
            @foreach (var bike in Model)
            {
                <div class="col-md-6 col-lg-6 mb-4">
                    <a class="bike-img" asp-controller="Bike" asp-action="BikeDetails" asp-route-id="@bike.Id">
                        <img src="~/Images/@(bike.Name).jpg" class="w-100" asp-append-version="true" />
                    </a>
                    <p class="mt-3 mb-3 fw-bold">@bike.Name</p>
                    <p class="mt-3 mb-3 fw-light">@(bike.Price) zł</p>
                    <a class="btn main_button mt-3" asp-controller="Bike" asp-action="BikeDetails" asp-route-id="@bike.Id">Explore</a>
                    <br />
                </div>
            }

        </div>
    </div>
</div>

