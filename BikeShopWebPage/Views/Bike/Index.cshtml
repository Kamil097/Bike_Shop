@model IEnumerable<BikeShopWebPage.Models.Bike>

@{
    ViewData["Title"] = "Index";
}
<img src="~/Images/widebikepic.jpg" class="w-100" />

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our great selection of Bikes!
        </h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        
                    </div>
                </div>
            </div>
            @foreach (var bike in Model)
            {
                <div class="col-4 mb-5">
                    <a class="pizza-img" asp-area="" asp-page="/Bike/Index">
                        <img src="~/Images/@(bike.Name).jpg" class="w-100" asp-append-version="true" />
                        <p>@bike.Name</p>
                    </a>
                    <br />
                </div>
            }
        </div>
    </div>
</div>

